-- Création de la base de données
CREATE DATABASE Fitness;

-- Utilisation de la base de données
USE Fitness;

-- Création de la table Administrateur
CREATE TABLE Administrateur (
    Id_Admin INT PRIMARY KEY,
    Nom VARCHAR(50),
    Prénom VARCHAR(50),
    Mail VARCHAR(50),
    Mdp VARCHAR(50)
);

-- Création de la table Coach
CREATE TABLE Coach (
    Id_Coach INT PRIMARY KEY,
    Nom VARCHAR(50),
    Prénom VARCHAR(50),
    Mail VARCHAR(50),
    Mdp VARCHAR(50),
    Photo VARCHAR(50),
    Spécialité VARCHAR(50),
    Vidéo VARCHAR(50),
    CV VARCHAR(50),
    Téléphone VARCHAR(50),
    Disponible BOOLEAN
);

-- Création de la table Client
CREATE TABLE Client (
    Id_Client INT PRIMARY KEY,
    Nom VARCHAR(50),
    Prénom VARCHAR(50),
    Mail VARCHAR(50),
    Mdp VARCHAR(50),
    Adresse VARCHAR(50),
    Carte_Etd VARCHAR(50),
    Code_Postal INT,
    Ville VARCHAR(50),
    Pays VARCHAR(50)
);

-- Création de la table Carte bancaire
CREATE TABLE Carte_Bancaire (
    Numéro_Carte INT PRIMARY KEY,
    Date_exp DATE,
    Cryptogramme INT,
    Nom_Titulaire VARCHAR(50),
    Id_Client INT,
    FOREIGN KEY (Id_Client) REFERENCES Client(Id_Client)
);

-- Création de la table Salle
CREATE TABLE Salle (
    Id_Salle INT PRIMARY KEY,
    Nom VARCHAR(50),
    Adresse VARCHAR(50),
    Téléphone VARCHAR(50)
);

-- Création de la table Sport
CREATE TABLE Sport (
    Id_Activité INT PRIMARY KEY,
    Nom VARCHAR(50),
    Id_Coach INT,
    FOREIGN KEY (Id_Coach) REFERENCES Coach(Id_Coach)
);

-- Création de la table Planning
CREATE TABLE Planning (
    Id_Planning INT PRIMARY KEY,
    Jour VARCHAR(50),
    Heure_Début VARCHAR(50),
    Heure_Fin TIME VARCHAR(50),
    Occupé BOOLEAN,
    Id_Client INT,
    Id_Coach INT,
    FOREIGN KEY (Id_Client) REFERENCES Client(Id_Client),
    FOREIGN KEY (Id_Coach) REFERENCES Coach(Id_Coach)
);
